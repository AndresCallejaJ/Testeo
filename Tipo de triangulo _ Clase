fun identificarTriangulo(a: Double, b: Double, c: Double) {
    if (a == b && b == c) {
        println("El triángulo es Equilátero")
    } else if (a == b || a == c || b == c) {
        println("El triángulo es Isósceles")
    } else {
        println("El triángulo es Escaleno")
    }
}

fun main() {
    // Ejemplos de prueba
    identificarTriangulo(3.0, 3.0, 3.0) // Equilátero
    identificarTriangulo(3.0, 4.0, 4.0) // Isósceles
    identificarTriangulo(3.0, 4.0, 5.0) // Escaleno
}
